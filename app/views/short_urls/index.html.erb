<%= render 'shared/slim_fast_navigation' %>

<h1>Short URLs</h1>

<% if @short_urls.count > 0 %>
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>Code</th>
      <th>Destination URL</th>
      <th>Expansion Count</th>
      <th>Actions</th>
    </tr>

  <% @short_urls.each do |short_url| %>
    <tr>
      <td class="middle"><%= short_url.name %></td>
      <td class="middle"><%= short_url.short_domain.domain if short_url.short_domain %></td>
      <td class="middle"><%= link_to short_url.code, short_url %></td>
      <td class="middle"><%= short_url.destination_url %></td>
      <td class="middle"><%= short_url.expansion_count %></td>
      <td class="span2 right">
        <%= link_to 'Edit', edit_short_url_path(short_url), :class => 'btn btn-info' %>
        <%= link_to 'Destroy', short_url, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />
<% else %>
  <p>
    There are no short URLs.
  </p>
<% end %>

<%= link_to 'New Short URL', new_short_url_path %>
