<%= render 'shared/slim_fast_navigation' %>

<h1>Short URLs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Domain</th>
    <th>Code</th>
    <th>Destination URL</th>
    <th>Expansion Count</th>
    <th></th>
  </tr>

<% @short_urls.each do |short_url| %>
  <tr>
    <td><%= short_url.name %></td>
    <td><%= short_url.short_domain.domain if short_url.short_domain %></td>
    <td><%= link_to short_url.code, short_url %></td>
    <td><%= short_url.destination_url %></td>
    <td><%= short_url.expansion_count %></td>
    <td>
      <%= link_to 'Edit', edit_short_url_path(short_url) %>
      /
      <%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Short Url', new_short_url_path %>
